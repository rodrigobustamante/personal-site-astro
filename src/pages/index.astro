---
import Layout from '~/layouts/PageLayout.astro';

import Hero from '~/components/widgets/Hero.astro';
import Features2 from '~/components/widgets/Features2.astro';

const metadata = {
  title: 'Rod Bustamante — Web UI Developer',
  ignoreTitleTemplate: true,
};
---

<Layout metadata={metadata}>
  <Hero image={{ src: '~/assets/images/hero.png', alt: 'AstroWind Hero Image' }}>
    <Fragment slot="title">
      <p class="text-accent dark:text-white highlight">Rodrigo Bustamante</p>
    </Fragment>

    <Fragment slot="subtitle">
      <div class="flex flex-col">
        <span> <span class="font-semibold">Web UI Developer</span> from Santiago, Chile 🇨🇱.</span>
        <span>
          I develop <span class="font-semibold">web and mobile applications</span>, ensuring <span class="font-semibold"
            >performance</span
          > and <span class="font-semibold">accessibility</span>.</span
        >
        <span>Lego builder 🧱, cat lover 🐈 and enthusiastic traveler 🛩️</span>
      </div>
    </Fragment>
  </Hero>
  <Features2
    title="Experience"
    items={[
      {
        title: 'LATAM Airlines',
        description: `<p>Web UI Developer Senior</p>`,
        callToAction: {
          text: 'Website',
          href: 'https://latamairlines.com',
        },
      },
      {
        title: 'Globant',
        description: `<p>Web UI Developer Senior</p>`,
        callToAction: {
          text: 'Website',
          href: 'https://globant.com',
        },
      },
      {
        title: 'Acid Labs',
        description: `<p>Software Engineer</p>`,
        callToAction: {
          text: 'Website',
          href: 'https://acidlabs.com',
        },
      },
      {
        title: 'INNSPIRAL',
        description: `<p>Technology Analyst</p>`,
        callToAction: {
          text: 'Website',
          href: 'https://innspiral.com',
        },
      },
    ]}
  >
    <Fragment slot="bg">
      <div class="absolute inset-0 bg-blue-50 dark:bg-transparent"></div>
    </Fragment>
  </Features2>
</Layout>
