---
import Layout from '~/layouts/PageLayout.astro';

import Hero from '~/components/widgets/Hero.astro';
import Experience from '~/components/widgets/Experience.astro';

const metadata = {
  title: 'Rod Bustamante — Web UI Developer',
  ignoreTitleTemplate: true,
};
---

<Layout metadata={metadata}>
  <Hero image={{ src: '~/assets/images/hero.png', alt: 'Psychedelic Astronaut' }}>
    <Fragment slot="title">
      <p class="text-accent dark:text-white highlight">Rodrigo Bustamante</p>
    </Fragment>

    <Fragment slot="subtitle">
      <div class="flex flex-col">
        <span> <span class="font-semibold">Web UI Developer</span> from Santiago, Chile 🇨🇱.</span>
        <span>
          I develop <span class="font-semibold">web and mobile applications</span>, ensuring <span class="font-semibold"
            >performance</span
          > and <span class="font-semibold">accessibility</span>.</span
        >
        <span>Lego builder 🧱, cat lover 🐈 and enthusiastic traveler 🛩️</span>
      </div>
    </Fragment>
  </Hero>
  <Experience id="experience" />
</Layout>
